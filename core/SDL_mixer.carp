(system-include "SDL2/SDL_mixer.h")
(add-lib "-lSDL2_mixer")
(Project.config "cflag" "-Wno-incompatible-pointer-types-discards-qualifiers")

(register-type Mix_Chunk)
(register-type Mix_Music)

(defmodule Mixer

