;; FUNCTION POINTERS
(deftest test-call-twice
  (do (defn call-twice (f)
        (do (strlen (ref (f))) (f)))
      (defn call-me ()
        (string-copy "CARP!"))
      (bake call-twice)
      (bake call-me)
      (assert-eq "CARP!" (call-twice call-me))))


